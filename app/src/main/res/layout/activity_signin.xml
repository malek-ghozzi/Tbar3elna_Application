<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signin">

    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="80px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/teal_200"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/welcome_txt">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name and Last name"
                android:textSize="50px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Name and last name here"
                android:layout_below="@+id/name_txt"
                android:layout_marginTop="50px"
                android:layout_centerHorizontal="true"
                android:inputType="text"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/birth_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:layout_below="@+id/name_edit"
                android:textSize="50px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:textColor="@color/red"/>

            <EditText
                android:id="@+id/birth_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/birth_txt"
                android:hint="Date of birth here"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:textSize="30px"
                android:inputType="date"/>

            <TextView
                android:id="@+id/cin_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CIN N°"
                android:layout_below="@+id/birth_edit"
                android:textSize="50px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:textColor="@color/red"/>

            <EditText
                android:id="@+id/cin_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cin_txt"
                android:hint="CIN N° here"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:textSize="30px"
                android:inputType="number" />

            <TextView
                android:id="@+id/blood_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood group"
                android:layout_below="@+id/cin_edit"
                android:textSize="50px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:textColor="@color/red"/>

            <EditText
                android:id="@+id/blood_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/blood_txt"
                android:hint="Blod group here"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:textSize="30px"
                android:inputType="text" />

            <TextView
                android:id="@+id/password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_below="@+id/blood_edit"
                android:textSize="50px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:textColor="@color/red"/>

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_txt"
                android:hint="Your Password here"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:textSize="30px"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btn_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:layout_marginBottom="50px"
                android:text="Sign in"
                android:background="@color/red"/>

            <ProgressBar
                android:id="@+id/signin_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_signin"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>