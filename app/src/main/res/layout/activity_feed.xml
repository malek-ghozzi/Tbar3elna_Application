<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feed">

    <TextView
        android:id="@+id/feed_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="These people needs your\n HELP !"
        android:textSize="50px"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"/>

    <TextView
        android:id="@+id/add_info_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add info"
        android:layout_below="@+id/feed_txt"
        android:textSize="50px"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"/>


    <Button
        android:id="@+id/btn_logout_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:layout_below="@+id/add_info_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:onClick="logOut"/>

    <ListView
        android:id="@+id/listview_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_logout_feed"
        android:layout_marginTop="50px"
        android:layout_marginBottom="10px"/>

</RelativeLayout>