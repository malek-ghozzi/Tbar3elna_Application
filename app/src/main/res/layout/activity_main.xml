<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome_login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="80px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/red"
        android:layout_marginTop="50px"/>

    <TextView
        android:id="@+id/cin_login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CIN N° please"
        android:textSize="50px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:textColor="@color/red"
        android:layout_below="@+id/welcome_login_txt"/>

    <EditText
        android:id="@+id/cin_login_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CIN N° here"
        android:layout_below="@+id/cin_login_txt"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:textSize="30px"/>

    <TextView
        android:id="@+id/password_login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@+id/cin_login_edit"
        android:textSize="50px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:textColor="@color/red"/>

    <EditText
        android:id="@+id/password_login_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_login_txt"
        android:hint="Password here"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:textSize="30px"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_login_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:layout_marginBottom="50px"
        android:text="Log in"
        android:background="@color/red"/>

    <TextView
        android:id="@+id/signin_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I don't have an account"
        android:textSize="20px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:textColor="@color/teal_200"
        android:layout_below="@+id/btn_login"/>

    <TextView
        android:id="@+id/admin_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am an Admin"
        android:textSize="30px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:textColor="@color/red"
        android:layout_below="@+id/signin_txt"/>

    <ProgressBar
        android:id="@+id/progress_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:visibility="invisible"/>

</RelativeLayout>